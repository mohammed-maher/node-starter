    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "swagger-ui-express": "^4.1.6",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/cookie-parser": "^1.4.2",
