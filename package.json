    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.9",
    "pkg": "^5.3.0",
    "prettier": "^2.3.2",
    "prisma": "^2.27.0",
    "supertest": "^6.1.3",
